<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.pierrebouillon.introduction.StopwatchActivity"
    android:orientation="horizontal">

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/but_stopwatch_start"
        android:text="@string/but_stopwatch_start"
        android:background="@color/but_stopwatch_start"
        android:textColor="@color/fontColor" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/but_stopwatch_stop"
        android:text="@string/but_stopwatch_stop"
        android:background="@color/but_stopwatch_stop"
        android:textColor="@color/fontColor" />

</LinearLayout>
