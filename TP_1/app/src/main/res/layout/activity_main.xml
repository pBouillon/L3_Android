<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.example.pierrebouillon.introduction.MainActivity">

    <Button
        android:id="@+id/but_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/but_standard"
        android:text="@string/but_hello"
        android:textColor="@color/fontColor" />

    <Button
        android:id="@+id/but_stopwatch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/but_standard"
        android:text="@string/but_stopwatch"
        android:textColor="@color/fontColor" />

    <Button
        android:id="@+id/but_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/but_standard"
        android:text="@string/but_picture"
        android:textColor="@color/fontColor" />

    <Button
        android:id="@+id/but_show_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/but_standard"
        android:text="@string/but_show_picture"
        android:textColor="@color/fontColor" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="270dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/img_view_desc" />

</LinearLayout>
